{
  "manifest_version": 3,
  "name": "Smart English Vocabulary Notebook",
  "version": "1.0.0",
  "description": "智能英语单词记忆本 - 帮助你高效记忆英语单词",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://api.dictionaryapi.dev/*"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "英语单词记忆本",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "js/background.js"
  }
}